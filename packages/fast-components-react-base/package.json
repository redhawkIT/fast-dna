{
  "name": "@microsoft/fast-components-react-base",
  "description": "FAST base components implemented in React.",
  "version": "1.0.4",
  "author": {
    "name": "Microsoft",
    "email": "fwq@microsoft.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean:dist": "node ../../build/clean.js dist",
    "build:app": "webpack --progress",
    "prepare": "npm run clean:dist && tsc -p ./tsconfig.json",
    "start": "webpack-dev-server",
    "test": "npm run tslint && npm run unit-tests && npm run build:app",
    "tslint": "tslint -c ./tslint.json 'src/**/*.ts{,x}' '**/*.ts{,x}'",
    "tslint:fix": "tslint -c ./tslint.json --fix 'src/**/*.ts{,x}' '**/*.ts{,x}'",
    "unit-tests": "jest",
    "unit-tests:update": "jest --updateSnapshot",
    "unit-tests:watch": "jest --watch"
  },
  "license": "MIT",
  "readme": "README.md",
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@microsoft/fast-development-site-react": "1.0.4",
    "@microsoft/fast-jest-snapshots-react": "^1.0.4",
    "@microsoft/fast-tslint-rules": "^1.0.4",
    "@types/jest": "^22.2.0",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.4.6",
    "@types/react": "^16.3.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.0.4",
    "jest": "^22.4.2",
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.0",
    "yargs": "^11.0.0"
  },
  "peerDependencies": {
    "lodash-es": "^4.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "dependencies": {
    "@microsoft/fast-components-class-name-contracts-base": "^1.0.4"
  }
}
