{
  "name": "@microsoft/fast-markdown-msft-react",
  "description": "Converter for markdown files to JSX as a string which can be embedded in a site",
  "version": "1.0.4",
  "author": {
    "name": "Microsoft",
    "email": "fwq@microsoft.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "readme": "README.md",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean:dist": "node ../../build/clean.js dist",
    "prepare": "npm run clean:dist && tsc -p ./tsconfig.json",
    "test": "npm run tslint && npm run unit-tests",
    "tslint": "tslint -c tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c tslint.json '**/*.ts{,x}' --fix",
    "unit-tests": "jest",
    "unit-tests:watch": "jest --watch && npm-watch"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": -10
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$"
  },
  "devDependencies": {
    "@microsoft/fast-jest-snapshots-react": "^1.0.4",
    "@microsoft/fast-tslint-rules": "^1.0.4",
    "@types/jest": "^22.1.2",
    "@types/markdown-it": "0.0.4",
    "@types/node": "^9.4.6",
    "@types/react": "^16.3.6",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "jest": "^22.3.0",
    "lodash-es": "^4.0.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "react": "^16.3.1",
    "react-dom": "^16.3.1"
  },
  "dependencies": {
    "markdown-it": "^8.4.0"
  }
}
