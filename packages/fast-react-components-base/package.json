{
  "name": "@microsoft/fast-react-components-base",
  "description": "FAST base components implemented in React.",
  "author": {
    "name": "Fluent Web",
    "email": "fwq@microsoft.com"
  },
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean:dist && tsc -p ./tsconfig.json",
    "clean:dist": "node ../../build/clean.js dist",
    "start": "webpack-dev-server",
    "test": "jest",
    "test:watch": "jest --watch",
    "tslint": "tslint -c ../../tslint.json \"**/*.ts\" \"**/*.tsx\"",
    "tslint:fix": "tslint -c ../../tslint.json --fix \"**/*.ts\" \"**/*.tsx\"",
    "prepare": "npm run build"
  },
  "license": "MIT",
  "readme": "README.md",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
        "!<rootDir>/node_modules/lodash-es"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@microsoft/fast-react-development-site": "1.0.0",
    "@microsoft/fast-tslint-rules": "^1.0.4",
    "@types/jest": "^22.2.0",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^9.4.6",
    "@types/react": "^16.0.40",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.0.4",
    "jest": "^22.4.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.0.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.0",
    "yargs": "^11.0.0"
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "dependencies": {
    "@microsoft/fast-react-jss-manager": "^1.0.0",
    "lodash-es": "^4.17.7"
  }
}
