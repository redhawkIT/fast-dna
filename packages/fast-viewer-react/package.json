{
  "name": "@microsoft/fast-viewer-react",
  "description": "An implementation of a React iframe that is self-contained.",
  "author": {
    "name": "Fluent Web",
    "email": "fwq@microsoft.com"
  },
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/fast-dna.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "reactjs"
  ],
  "main": "dist/index.js",
  "scripts": {
    "prepare": "tsc -p ./src/tsconfig.json",
    "start": "webpack-dev-server --progress",
    "test": "npm run tslint && npm run unit-tests && webpack --progress",
    "tslint": "tslint -c tslint.json '**/*.ts{,x}'",
    "tslint:fix": "tslint -c tslint.json '**/*.ts{,x}' --fix",
    "unit-tests": "jest",
    "unit-tests:update": "jest --update"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 29,
        "functions": 57,
        "lines": 67,
        "statements": 68
        }
    },
    "testRegex": "(/__tests__/.*(test|spec))\\.(ts|tsx)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./src/tsconfig.json"
      }
    }
  },
  "peerDependencies": {
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@microsoft/fast-tslint-rules": "^1.0.2",
    "@types/jest": "^22.1.1",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "^4.0.21",
    "@types/react-router-dom": "^4.2.3",
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "html-webpack-plugin": "^3.0.0",
    "jest": "^22.2.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.3",
    "ts-loader": "^4.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.3.3",
    "typescript": "^2.6.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {
    "jss": "^9.8.0",
    "jss-preset-default": "^4.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
